# .env.example
# Copy this file to .env and fill in your values.
# NEVER commit your real .env to version control.

# ── App ──────────────────────────────────────────────────────────────────────
APP_ENV=production
DEBUG=false

# ── Database ─────────────────────────────────────────────────────────────────
# Local PostgreSQL (development):
#   DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/taskflow_db
#
# Render PostgreSQL (production) – copy from Render dashboard → your DB → Connection String:
DATABASE_URL=postgresql://user:password@host:5432/taskflow_db

# ── CORS ─────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins.
# 
ALLOWED_ORIGINS=["https://taskflow-frontend-22la.onrender.com","http://localhost:5173","http://localhost:5500"]
